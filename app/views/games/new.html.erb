
<div class="container m-auto d-flex flex-column">
<h1 class="m-auto">New game</h1>
<div class="m-auto">
<% @letters.each do |t| %>
<p class="btn btn-primary m-3"><%= t.upcase %></p>
<% end %>
</div>
  <p class="m-auto">What is the longest word you can find?</p>
  <form class="form-check w-50 m-auto" action="score" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :random_letters, @letters %>
      <input type="text" name="score" class="form-control">
      <input class="form-control form-check-label" type="submit" value="Play">
    </form>
  </div>
